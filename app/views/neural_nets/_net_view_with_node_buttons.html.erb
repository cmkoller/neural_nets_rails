<% @neural_net.num_layers.times do |layer| %>
  <div class="row layer layer_<%= layer %>">
    <!-- Print "Delete" Button -->
    <div class="columns small-1">
      <%= render partial: 'nodes/delete_node', locals: {layer: layer} %>
    </div>
    <!-- Print Layer -->
    <div class="columns small-10">
      <%= render partial: 'layer', locals: {layer: layer} %>
    </div>

    <!-- Print "Add" Button -->
    <div class="columns small-1">
      <%= render partial: 'nodes/add_node', locals: {layer: layer} %>
    </div>
  </div>

<% end %>

<% layer = @neural_net.num_layers %>

<div class="row layer layer_<%= layer %>">
  <!-- Print "Delete" Button -->
  <div class="columns small-1">
    <%= render partial: 'nodes/delete_node', locals: {layer: layer} %>
  </div>

  <!-- Print "Add" Button -->
  <div class="columns small-1">
    <%= render partial: 'nodes/add_node', locals: {layer: layer} %>
  </div>

</div>
